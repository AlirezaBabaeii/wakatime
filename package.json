    "lint:style": "stylelint \"packages/web/src/css/*.css\"",
    "lint:es": "eslint . --fix"
  },
  "devDependencies": {
    "@fullstacksjs/eslint-config": "6.8.2",
    "@fullstacksjs/tsconfig": "0.6.0",
    "@types/express": "4.17.13",
    "@types/node": "16.11.6",
    "axios": "0.22.0",
    "dotenv": "10.0.0",
    "eslint": "7.32.0",
    "https-proxy-agent": "5.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.0.2",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "shx": "0.3.3",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "ts-node": "10.4.0",
    "tsm": "2.1.4",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "@fullstacksjs/toolbox": "2.8.4",
    "@types/cron": "1.7.3",
    "awilix": "6.0.0",
    "cron": "1.8.2",
    "ejs": "3.1.6",
    "express": "4.17.1",
    "grammy": "1.4.2",
    "lowdb": "3.0.0",
